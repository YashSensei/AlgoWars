{
  "name": "algowars",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsup",
    "start": "bun dist/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "check:functions": "bun scripts/check-function-length.ts",
    "quality": "bun run typecheck && bun run lint && bun run check:functions && bun test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:ingest": "bun scripts/ingest-problems.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "jsonwebtoken": "^9.0.3",
    "openai": "^6.15.0",
    "postgres": "^3.4.7",
    "socket.io": "^4.8.3",
    "zod": "^4.3.4"
  }
}
